<!doctype html>
<html lang="en" data-theme="light">
  <head>
    {{ include 'head' }}
    <link rel="stylesheet" href="{{
      if slug == "index"
        "index" 
      else 
        "docs"
      end }}.css" />
  </head>

  <body>

    {{ include 'navbar' }}

    <main {{ if slug != "index" }}class="container" {{ end }}id="docs">

      {{ if slug != "index"
          include 'aside'
         end }}

      <div role="document">

{{ if slug == "index"
     include main_include
   else }}
        <section id="start" class="page_{{slug}}">
{{ include main_include }}
        </section>
{{ end }}

        {{ include 'footer' }}

      </div>
    </main>
    {{ if slug != "index"
          include 'tabscript'
       end }}
  </body>
</html>
