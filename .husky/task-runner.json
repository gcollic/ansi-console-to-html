{
   "tasks": [
      {
         "name": "fantomas",
         "group": "pre-commit",
         "command": "dotnet",
         "args": ["fantomas", "${staged}"],
         "include": ["**/*.fs"]
      },
      {
         "name": "commit-message-linter",
         "command": "dotnet",
         "args": [
            "husky",
            "exec",
            ".husky/csx/commit-lint.csx",
            "--args",
            "${args}"
         ]
      },
      {
         "name": "export-doc",
         "command": "dotnet",
         "args": [
            "run",
            "--project",
            "./docAsTests/AnsiConsoleToHtml.DocExporter"
         ]
      }
   ]
}
